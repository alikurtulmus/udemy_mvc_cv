@model udemy_mvc_cv.Models.Entity.TblYetenekler

@{
    ViewBag.Title = "YetenekDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<h4>Yetenek Düzenle</h4>
<br />

<form method="post">
    @Html.Label("Yetenek Adı")
    @Html.TextBoxFor(x => x.Yetenek, new { @class = "form-control" })
    <br />

    @Html.Label("Yetkinlik Düzeyi")
    @Html.TextBoxFor(x => x.Oran, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">Kaydet</button>
</form>

