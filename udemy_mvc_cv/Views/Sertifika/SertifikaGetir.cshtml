@model udemy_mvc_cv.Models.Entity.TblSertifikalar

@{
    ViewBag.Title = "SertifikaGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<h4>Sertifika Düzenle</h4>
<br />

<form method="post">
    @Html.Label("Sertifika Açıklaması")
    @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
    <br />

    @Html.Label("Tarih")
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">Kaydet</button>
    <a href="/Sertifika/SertifikaSil/@ViewBag.d" class="btn badge-danger">Sil</a>

</form>


